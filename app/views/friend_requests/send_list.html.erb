<h2>送った申請一覧</h2>
<table>
  <tr>
    <th>学生</th>
    <th>承認</th>
    <th>送信日時</th>
  </tr>

<% @friend_requests.each do |req| %>
  <tr>
    <td><%= link_to req.to.user_name,req %></td>
    <td><% if req.approval %>
          <%= "承認済み" %>
          <% elsif req.check %>
            <%= "拒否" %>
          <% else %><%= "承認待ち" %>
          <% end %></td>
    <td><%= req.created_at %></td>
  </tr>
<% end %>
</table>
